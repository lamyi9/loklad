import { getCollection } from "astro:content";

export async function getStaticPaths(){
    const appEntries = await getCollection("tools"); 
    return appEntries.map((entry) => ({
        params: {
            slug: entry.slug,
            title: entry.data.title,
        },
        props: {entry}
    }))
}

