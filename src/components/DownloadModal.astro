---
import Download from "./icons/download.astro";
---
<div id="popup-modal" tabindex="-1" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full bg-slate-900/60 backdrop-blur-sm">
    <div class="relative p-4 w-auto min-w-96 max-w-lg max-h-full">
        <div class="relative shadow dark:bg-gray-700  bg-slate-600/20 rounded-2xl  ">
            <button type="button" class="absolute top-3 end-2.5 text-gray-400 bg-transparent hover:text-gray-300 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center " data-modal-hide="popup-modal">
                <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                    <path stroke="#F9FAFB" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                </svg>
                <span class="sr-only">Close modal</span>
            </button>
            <div class="text-center pt-6 ">
               <Download color="#FDFDEA"/>
                <h3 class="mb-5   text-gray-100 text-2xl font-normal pt-5 font-bo">ཕབ་ལེན་གནང་རོགས།</h3>
                <div class="flex justify-between bg-gray-100 rounded-b-2xl overflow-hidden w-auto">
                    <slot/>
                </div>
                
            </div>
        </div>
    </div>
</div>


