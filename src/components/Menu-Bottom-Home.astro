---
import Globe from "./icons/Globe.astro";
import Home from "./icons/Home.astro";
import Sheild from "./icons/Sheild.astro";
import Tools from "./icons/Tools.astro";
---

<div class="flex justify-center w-screen-sm">
    
    <div class="  w-full  max-w-96 flex  fixed  bottom-2  backdrop-blur-md     cursor-pointer group" >
        <div
        class="-z-0 absolute -inset-1 bg-gradient-to-r from-red-600 to-violet-600 rounded-lg blur opacity-25 group-hover:opacity-100 transition duration-1000 group-hover:duration-200">
        </div>   
        <ul class="text-red-600 flex flex-wrap w-full text-sm  text-center justify-between gap-0 z-10 bg-gray-900 py-2 px-5 rounded-3xl items-center border-2 border-slate-200" id="default-tab " data-tabs-toggle="#default-tab-content" role="tablist">
            <button  id="tools-tab" data-tabs-target="#apps" type="button" role="tab" aria-controls="apps" aria-selected="false"  class="px-6 flex flex-col text-white items-center">
                <Sheild/>
                <span class="text-xs md:text-sm">Security</span>
            </button>
            <button  id="tools-tab" data-tabs-target="#browser" type="button" role="tab" aria-controls="browser" aria-selected="false"  class="px-6 flex flex-col text-white items-center">
                <Globe/>
                <span class="text-xs md:text-sm">Browsers</span>
            </button>
            <button  id="tools-tab" data-tabs-target="#tools" type="button" role="tab" aria-controls="tools" aria-selected="false"  class="px-6 flex flex-col text-white items-center">
                <Tools/>
                <span class="text-xs md:text-sm">Tools</span>
            </button>
      </ul>
     </div>
  </div>