---
import Star from '../components/icons/star.astro'
 const {title,rating,url,thumbnail} = Astro.props;
---
<a href={url}>
    <div class="flex w-full max-w-80 rounded-2xl shadow-sm items-center border border-slate-100 bg-white">
        <div class="m-2.5 overflow-hidden rounded-xl w-16 max-w-16 h-16">
            <img class="w-full h-full object-cover" src={thumbnail} alt="profile-picture" />
        </div>
        <div class="mx-2.5 flex flex-col justify-center ">
            <p class="text-md font-semibold">{title}</p>
            <p class="text-xs font-semibold text-slate-400">VPN</p>
            <p class="flex text-slate-400 text-sm">
                <Star/><span class="px-1">{rating}</span>
            </p>
        </div>
    </div>
</a>